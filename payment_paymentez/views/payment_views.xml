<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_paymentez" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'paymentez')]}">
                    <field name="paymentez_client_app_code" attrs="{'required':[ ('provider', '=', 'paymentez'), ('state', '!=', 'disabled')]}"/>
                    <field name="paymentez_client_app_key" attrs="{'required':[ ('provider', '=', 'paymentez'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="paymentez_server_app_code" attrs="{'required':[ ('provider', '=', 'paymentez'), ('state', '!=', 'disabled')]}"/>
                    <field name="paymentez_server_app_key" attrs="{'required':[ ('provider', '=', 'paymentez'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
            <!--<xpath expr='//group[@name="acquirer_config"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'paymentez')]}">
                    <field name="paymentez_image_url"/>
                </group>
            </xpath>-->
        </field>
    </record>
</odoo>
