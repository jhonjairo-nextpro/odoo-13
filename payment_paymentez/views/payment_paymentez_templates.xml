<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="paymentez_form">
            <input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>
            <input type='hidden' name='session_id' t-att-value='session_id'/>
            <input t-if="partner_id" type="hidden" name="partner_id" t-att-value="partner_id"/>

            <input type="hidden" name="client_app_code" t-att-value='client_app_code'/>
            <input type="hidden" name="amount" t-att-value='amount'/>
            <input type="hidden" name="name" t-att-value='name'/>
            <input type="hidden" name="contact" t-att-value='contact'/>
            <input type="hidden" name="email" t-att-value='email'/>
            <input type="hidden" name="reference" t-att-value='reference'/>
            <input type="hidden" name="merchant_name" t-att-value='acquirer.company_id.name'/>
            <input type="hidden" name="acquirer_id" t-att-value='acquirer.id'/>
            <input type="hidden" name="currency_id" t-att-value="currency_id"/>
            <input t-if="website_sale_order" type="hidden" name="sale_order_id" t-att-value="website_sale_order.id"/>
            <input t-if="return_url" type="hidden" name="return_url" t-att-value="return_url"/>
            
        </template>

        <template id="paymentez_s2s_form">
            <input type="hidden" name="data_set" value="tx_url"/>
            <input type="hidden" name="acquirer_id" t-att-value="id"/>
            <input type="hidden" name="currency_id" t-att-value="currency_id"/>
            <input t-if="return_url" type="hidden" name="return_url" t-att-value="return_url"/>
            <input t-if="partner_id" type="hidden" name="partner_id" t-att-value="partner_id"/>
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
        </template>

        <template id="assets_frontend" inherit_id="web.assets_frontend">
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src='https://cdn.paymentez.com/ccapi/sdk/payment_checkout_stable.min.js'></script>
                <script type="text/javascript" src="/payment_paymentez/static/src/js/payment_form.js"></script>
            </xpath>
        </template>
    </data>
</odoo>
